{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext",
    "outDir": "dit",
    "rootDir": "./src",
    "strict": true, 
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}

{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true, 
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
